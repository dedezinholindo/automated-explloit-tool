# Bug Bounty Platform Configuration

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/bugbounty
REDIS_URL=redis://localhost:6379/0
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Platform APIs
HACKERONE_API_KEY=your_hackerone_api_key
BUGCROWD_API_KEY=your_bugcrowd_api_key
INTIGRITI_API_KEY=your_intigriti_api_key
SHODAN_API_KEY=your_shodan_api_key

# Tool Configurations
NUCLEI_TEMPLATES_PATH=/home/kali/nuclei-templates
WORDLISTS_PATH=/usr/share/wordlists
BBOT_CONFIG_PATH=/home/kali/.config/bbot

# Slack/Discord Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Security
JWT_SECRET=your-super-secret-jwt-key
API_KEY=your-api-key-for-platform-access

# Performance
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=7200
RATE_LIMIT_PER_MINUTE=60

# Dashboard
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080
DEBUG=true